#!/usr/bin/env bash
set -e

# Run with first env
big_stitcher_json=$(conda run -n smartspim_stitch python run_capsule.py)

# Run with second env
conda run -n bigstitcher_env python -m aind_exaspim_pipeline_utils.imagej_wrapper \
    --input_json "$big_stitcher_json" \
    --log_level "DEBUG" \
    --results_path ../results \
    --parallel 16
