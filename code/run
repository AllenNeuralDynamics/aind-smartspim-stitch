#!/usr/bin/env bash
set -ex

# This is the master script for the capsule. When you click "Reproducible Run", the code in this file will execute.

# Activate stitch env to solve argschema python version bug
source /opt/conda/etc/profile.d/conda.sh
conda activate smart_stitcher

# Split parameters for argschema
# provide preprocessed_data path. The module adds timestamp and suffix '_preprocessed'
# provide output_data path. The module adds timestamp and suffix '_stitched'
python -u main.py --input_data /data/"$1"/SmartSPIM --preprocessed_data /"$3"/"$1" --output_data /"$3"/"$1" --pyscripts_path /home/TeraStitcher/src/utils/pyscripts --align.sD 15 --visualization.ng_base_url https://aind-neuroglancer-sauujisjxq-uw.a.run.app --visualization.mount_service s3 --visualization.bucket_path "$2"
